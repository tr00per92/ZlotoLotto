<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZlotoLotto.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Your Ropsten address is: " HorizontalOptions="Center" />
        <Label Text="{Binding Address}" />
        <Button Text="Open address in browser" Command="{Binding OpenAddressCommand}" />
        <BoxView />
        <BoxView />
        <Label Text="{Binding TokensCount, StringFormat='Your have {0} zloto lotto tickets'}" HorizontalOptions="Center" />
        <Button Text="Scratch ticket" Command="{Binding ScratchCommand}" />
        <Button Text="Exchange tickets" Command="{Binding GoToExchangeCommand}" />
    </StackLayout>
</ContentPage>
    